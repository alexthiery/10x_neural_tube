#!/usr/bin/env nextflow

// Define DSL2
nextflow.preview.dsl=2

// Log
log.info ("Starting test pipeline for filterGTF")

/*------------------------------------------------------------------------------------*/
/* Module inclusions 
--------------------------------------------------------------------------------------*/

include filterGTF from "$baseDir/filterGTF.nf"

/*------------------------------------------------------------------------------------*/
/* Params
--------------------------------------------------------------------------------------*/

gtf = params.gtf

/*------------------------------------------------------------------------------------*/
/* Define input channels
--------------------------------------------------------------------------------------*/
Channel
  .from(gtf)
  .set {ch_gtf}

workflow {
    filterGTF(ch_gtf)
}